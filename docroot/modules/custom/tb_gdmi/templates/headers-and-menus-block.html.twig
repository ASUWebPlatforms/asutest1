<div class="gdmi-headers-and-menus">
  <div class="gdmi-headers-and-menus__upper">
    <div class="container">
      <span class="gdmi-headers-and-menus__title">{{ title }}</span>
      <div class="gdmi-headers-and-menus__dropdown">
      {% if logged_in %}
        <button class="gdmi-headers-and-menus__dropdown-btn {{ in_user_route ? 'active' : '' }}">{{ 'Account'|t }} <i class="fas fa-chevron-down ml-2" aria-hidden="true"></i> </button>
        <div class="gdmi-headers-and-menus__dropdown-content">
          {{ drupal_menu(upper_menu, 1) }}
        </div>
      {% else %}
        <div class="ctas">
          <a href="/pricing" class="btn btn-gold py-0">Purchase GDMI<i class="fas fa-arrow-right ml-2"></i></a>       
          <a href="/user/login" class="btn btn-navy py-0">Login<i class="fas fa-arrow-right ml-2"></i></a>       
        </div>
      {% endif %}
      </div>
    </div>
  </div>
  {% if logged_in %}
    <div class="gdmi-headers-and-menus__lower">
      <div class="gdmi-headers-and-menus__hub-menu container">
        {{ drupal_menu(lower_menu, 1) }}
        {% if link.title %}
          <a id='{{ link.id }}' class="gdmi-headers-and-menus__extra-btn text-uppercase" href="{{link.uri}}">{{link.title}}
            <svg class="ml-1" xmlns="http://www.w3.org/2000/svg" height="1.5em" viewBox="0 0 512 512">
              <path fill="#002E5F" d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>
{{ attach_library('tb_gdmi/headers_and_menus') }}