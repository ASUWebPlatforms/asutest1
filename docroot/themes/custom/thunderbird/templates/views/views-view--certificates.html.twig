{#
/**
 * @file
 * Theme implementation for Certificates view template.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'certificates-for-individuals',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}
  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}
  {{ attachment_before }}
  
    <div class="container">
      <div class="row">
        <div class="col-md-3 certificate-form">
          <h3>Filters</h3>
          {{ exposed }}
        </div>
        <div class="col-md-9">
          {% if rows -%}
          <div class="uds-card-arrangement row">
            <div class="uds-card-arrangement-card-container auto-arrangement three-columns col-md-12">
              {{ rows }}
            </div>
          </div>
          {% elseif empty -%}
            {{ empty }}
          {% endif %}
        </div>
      </div>
    </div>
  {{ pager }}
  {{ attachment_after }}
  {{ more }}
  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}
  {{ feed_icons }}
</div>
