{#
/**
 * @file
 * Template for a block.
 */
#}
{% set classes = [
  'block-inline-block-gdmi-signposts',
]
%}

<div{{ attributes.addClass(classes) }}>
  <div class="container">
    {{ title_prefix }}
    <h1 class="title text-gold">{{ content.field_title.0 }}</h1>
    {{ title_suffix }}
    <div class="description">{{ content.body.0 }}</div>
    <div class="items">{{ content.field_signpost_icon }}</div>
    <div class="ctas d-flex justify-content-center">{{ content.field_link }}</div>
  </div>
</div>