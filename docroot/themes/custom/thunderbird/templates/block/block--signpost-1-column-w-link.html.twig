
{% set classes = [ 
    'signpost', 
    'container', 
    'block', 
    'block-' ~ configuration.provider|clean_class, 
    'block-' ~ plugin_id|clean_class 
    ] %}

{% extends 'block.html.twig' %}
{% block content %}
  <div class="signposts-container {{ content.field_alignment|render|striptags|trim }} row">
    {% if content.field_image['#items'] is not empty %}
      <div class="col-sm-12 col-lg-3 signpost-img">
        {{ content.field_image }}
      </div>
    {% endif %}
    <div class="col-sm-12 col-lg">{{ content.field_content }}</div>
    <div class="col-sm-12 col-lg-3 field-link-list">{{ content.field_multiple_links }}</div>
  </div>
{% endblock %}