{% set classes = [ 
    'signpost',
    'signpost-50-50',
    'block', 
    'block-' ~ configuration.provider|clean_class, 
    'block-' ~ plugin_id|clean_class 
  ]
%}
<div {{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="signposts-container">
    <div class="row">
      {{ content }}
    </div>
  </div>
</div>