
{% set classes = [
    'container',
    'block-inline-blockimage-and-text-block',
    'block-inline-blockimage-and-text-gdmi-block',
  ]
%}
{% extends 'block.html.twig' %}
{% set img_position = content.field_content_position|render|striptags|trim %}
{% set theme = content.field_theme|render|striptags|trim %}
{% set sub_heading = content.field_sub_heading|render|striptags|trim %}
{% set title = content.field_title|render|striptags|trim %}

{% block content %}
  <div class="uds-image-text-block-container row {{ theme }}">
    {% if img_position == 'left' %}
      <div class="uds-image-text-block-image-container col-lg col-md-12 col-sm-12 ">
        {{ content.field_media }}
      </div>
    {% endif %}
    <div class="uds-image-text-block-text-container col-lg col-md-12 col-sm-12 ">
      <h1 class="title">{{ title }}</h1>
      {% if sub_heading is not empty %}
        <span class="subhead">{{ sub_heading }}</span>
      {% endif %}
      {{ content.field_heading }}
      {{ content.field_formatted_text }}
      {% if content.field_two_cta|render|striptags|trim is not empty %}
        <div class="row">
          <div class="col-12 col-md-6 py-1">
            {{ content.field_two_cta }}
          </div>
        </div>
      {% endif %}
    </div>
    {% if img_position != 'left' %}
      <div class="uds-image-text-block-image-container image-container col-lg col-md-12 col-sm-12 ">
        {{ content.field_media }}
      </div>
    {% endif %}
  </div>
{% endblock %}
