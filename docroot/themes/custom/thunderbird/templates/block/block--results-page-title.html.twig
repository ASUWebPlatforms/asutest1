{#
/**
 * @file
 * Template for a block.
 */
#}
{% set classes = classes | default([]) | merge([
  'block',
  bundle ? 'block--' ~ bundle|clean_class,
  id ? 'block--' ~ id|replace({"_": "-"})|clean_class,
  base_plugin_id ? base_plugin_id|clean_class,
  derivative_plugin_id ? derivative_plugin_id|replace({"_": "-"})|clean_class,
])|merge(utility_classes ? utility_classes : [])
%}
{{ content.field_anchor_menu_settings }}
<div{{ attributes|without('id').addClass(classes) }}>
  <div class="container">
    <div class="row">
      <div class="col-12">
        {{ title_prefix }}
        {% if label %}
          {% block label %}
            <{{ heading_level }} class="h2">{{ label }}</{{ heading_level }}>
          {% endblock %}
        {% endif %}
        {{ title_suffix }}

        {% block content %}
          <h1 class="h1">{{ content|without('field_anchor_menu_settings') }}</h1>
        {% endblock %}
      </div>
    </div>
  </div>
</div>