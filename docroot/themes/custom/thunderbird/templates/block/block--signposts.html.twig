{% set classes = [
  'container',
  'signpost',
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class
  ] %}
<div {{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    {% block label %}
      <{{ heading_level }} class="{{ heading_style }}">{{ label }}</{{ heading_level }}>
    {% endblock %}
  {% endif %}
  {{ title_suffix }}

  <div class="signposts-container {{ signposts_variation }}">
    {{ content|without('field_heading_level', 'field_heading_style') }}
  </div>
</div>