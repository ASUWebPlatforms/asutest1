{{ attach_library('thunderbird/flipcards-library') }}
{% set classes = [
    'flipcards',
    'block', 
    'block-' ~ configuration.provider|clean_class, 
    'block-' ~ plugin_id|clean_class
  ]
%}
<div {{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  <div class="row">
    {% for key, card in content.field_flipcard if key|first != '#' %}
      {{ card }}
    {% endfor %}
  </div>
</div>