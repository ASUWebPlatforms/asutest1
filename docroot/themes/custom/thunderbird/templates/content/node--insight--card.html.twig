{%
  set classes = [
    'node',
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    node.bundle|clean_class,
    node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
    'card'
  ]
%}
{% set insight_type = content.field_insight_type|render|striptags|trim %}

{{ attach_library('thunderbird/clickable') }}

<article{{ attributes.addClass(classes).setAttribute('data-js-clickable', "h3") }}>

  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
    {{ content.field_image }}
    {{ content.field_article_image }}
    {{ content.field_image_legacy }}
    <div class="content d-flex">
      <div class="col">    
        <div class="insight-date">{{ node.getCreatedTime() | date('U') | format_date('custom', 'm/d/y') }}</div>
        {# @TODO: Get heading level from block settings #}
        <h3{{ title_attributes }}>
          {% if content.field_remove_link.0|render|striptags|trim  == "1" %}
            {{ label.0 }}       
          {% else %}
            <a href="{{ url }}" rel="bookmark">{{ label.0 }}</a>
          {% endif %}
        </h3>
        <div class="details row flex-wrap">
          <div class="col-sm-12 card-content">
            {{ content|without('field_image', 'field_article_image', 'field_image_legacy', 'field_date', 'field_tags', 'field_topics', 'field_solutions', 'field_kn_tags', 'field_cta_button_color','field_cta_button_label', 'field_remove_link', 'field_insight_type') }}
          </div>
        </div>
        {% if content.field_tags|render|striptags|trim is not empty or
        content.field_topics|render|striptags|trim is not empty or
        content.field_solutions|render|striptags|trim is not empty or
        content.field_kn_tags|render|striptags|trim is not empty %}
          <div class="categories">
            {{ content.field_tags }}
            {{ content.field_topics }}
            {{ content.field_solutions }}
            {{ content.field_kn_tags }}
          </div>
        {% endif %}
        <div class="insight-type {{ insight_type|clean_class }}">
          <div class="text">{{ insight_type }}</div>
          <img class="image" src="/themes/custom/thunderbird/src/components/insights-grid/{{ insight_type|clean_class }}.png" alt="{{ insight_type }}" >
        </div>
      </div>
    </div>
  {% endblock %}
</article>
