{# Filter list to avoid vague aria labels #}
{% set filters = ['learn more', 'read more', 'follow us'] %}

{# Create aria label from url path or title #}
{% if (title|lower in filters) == true %}
    {% set aria_label = 'Link to ' ~ title|lower ~ ' on ' ~ url | render | split('/') | last | replace({ '-': ' ' }) ~ ' page' %}
{% else %}
    {% set aria_label = title %}
{% endif %}

{# Render aria-label attribute #}
aria-label="{{ aria_label }}"